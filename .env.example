# 数据库配置 (TCB MySQL)
DATABASE_URL="mysql://user:password@host:3306/database"

# 网站配置
NEXT_PUBLIC_SITE_URL="https://funclog.com"
NEXT_PUBLIC_BASE_URL="http://localhost:3000"

# NextAuth 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-random-secret-key-at-least-32-chars"

# 管理员凭证
# 邮箱直接填写，密码需要使用 bcrypt 哈希
# 生成密码哈希: npx ts-node scripts/hash-password.ts "your-password"
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD_HASH="$2a$12$..."

# OpenAI API 配置 (可选)
OPENAI_API_KEY="sk-..."
OPENAI_BASE_URL="https://api.openai.com/v1"

# 腾讯云 TCB 配置
TCB_ENV_ID="your-tcb-env-id"
TCB_SECRET_ID="your-secret-id"
TCB_SECRET_KEY="your-secret-key"

# Google reCAPTCHA v3 (评论防护，可选)
# 从 https://www.google.com/recaptcha/admin 获取密钥
NEXT_PUBLIC_RECAPTCHA_SITE_KEY="6L..."
RECAPTCHA_SECRET_KEY="6L..."
